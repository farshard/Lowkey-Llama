{
    "ports": {
        "ollama": 11434,
        "api": 8000,
        "streamlit": 8501
    },
    "hosts": {
        "ollama": "localhost",
        "api": "localhost",
        "streamlit": "localhost"
    },
    "paths": {
        "ollama": null,
        "models": "models",
        "cache": "cache",
        "logs": "logs"
    },
    "models": {
        "mistral": {
            "temp": 0.7,
            "max_tokens": 2048,
            "context_window": 4096
        }
    },
    "default_model": "mistral",
    "auto_open_browser": true,
    "log_level": "info",
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "file": "local_llm.log"
    },
    "tts": {
        "enabled": false,
        "provider": "gtts",
        "voice": "en-US"
    }
}